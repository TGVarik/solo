template(name="header")
   nav.navbar.navbar-default.navbar-static-top(role="navigation")
      .container-fluid
         .navbar-header
         button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#main-nav")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
         a.navbar-brand(href="{{pathFor 'home'}}") {{siteTitle}}
      div#main-nav.navbar-collapse.collapse
         if currentUser
            ul.nav.navbar-nav.navbar-right
               li.dropdown
                  a.dropdown-toggle(href="#" data-toggle="dropdown")
                     i.fa.fa-user
                        | #{currentUser.profile.name}
                     i.fa.fa-caret-down
                  ul.dropdown-menu(role="menu")
                     li
                        a(href="{{ pathFor 'profile' }}")
                           i.fa.fa-user
                              | Profile
                     li
                        a(href="{{ pathFor 'entrySignOut' }}" data-action="logout")
                           i.fa.fa-lock
                              | Sign Out
         else
            .navbar-right
               a.btn.btn-default.navbar-btn(href="{{ pathFor 'entrySignIn' }}") Sign in
               a.btn.btn-primary.navbar-btn(href="{{ pathFor 'entrySignUp' }}") Register
         ul.nav.navbar-nav.navbar-right
            li(class="{{ isActiveRoute 'home' }}")
               a(href="{{ pathFor 'home' }}")
                  i.fa.fa-home
                     | Home
            li(class="{{ isActivePath 'checkins' }}")
               a(href="{{ pathFor 'checkins' }}")
                  i.fa.fa-gear
                     | Checkins